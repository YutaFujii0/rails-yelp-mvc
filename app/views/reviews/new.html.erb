<div class="container">
  <div class="row">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, :collection => (1..5).to_a %>
      <%= f.submit "add a review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to "Back", restaurant_path(@restaurant) %>
