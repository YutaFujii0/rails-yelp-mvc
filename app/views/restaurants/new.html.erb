<div class="container">
  <div class="row">
    <%= simple_form_for [@restaurant] do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category, :collection => Restaurant::CATEGORY %>
      <%= f.submit "add", class: "btn btn-primary" %>
    <% end %>
  </div>

  <div class="row">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, :collection => (0..5).to_a %>
      <%= f.submit "add a review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to "Home", restaurants_path %>
