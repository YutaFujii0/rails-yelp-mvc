<div class="content">
<h2><%= @restaurant.name %></h2>



<ul>
  <li>Address: <%= @restaurant.address %></li>
  <!-- <li>Phone: <%= @restaurant.phone_number %></li> -->
  <li>Category: <%= @restaurant.category %></li>
</ul>

<h3>Reviews</h3>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      <h4><%= "*" * review.rating %></h4>
      <p><%= review.content %></p>
    </li>
  <% end %>
</ul>

<div class="row">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, :collection => (0..5).to_a %>
    <%= f.submit "add a review", class: "btn btn-primary" %>
  <% end %>
</div>

<%= link_to "Add review", new_restaurant_review_path(@restaurant) %>
<%= link_to "Home", restaurants_path %>
</div>
