<h1>Restaurants</h1>
<%= link_to "Create", new_restaurant_path %>

<%= simple_form_for(Restaurant.new) do |f| %>
  <%= f.input :name %>
  <%= f.submit %>
<% end %>

<ol>
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
    </li>
  <% end %>
</ol>
